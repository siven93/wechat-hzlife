/**app.wxss**/
.container {
  width:100%;
  height: 100%;
  font-size:26rpx;
}
.column-center {
  display:-webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-align-items: center;
  align-items: center;
}
.row-center {
  display:-webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}
.column {
  display:-webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}
/* 点击放大 */
.extend-click::before{
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
}
/* 回到首页 */
.to-index {
  display: block;
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  background:#fda924;
  box-shadow: 0 0 10rpx #fda924;
  position:fixed;
  right: 80rpx;
  bottom: 160rpx;
  z-index: 4;
  text-align: center;
  line-height: 80rpx;
}
.index-icon {
  display: inline-block;
  width:48rpx;
  height:48rpx;
  background: url('http://shop.hz-life.com/Static/img/white/menu04.png') no-repeat;
  background-size: contain;
  vertical-align: middle;
}