page {
  background: #f5f5f5;
}

.header {
  display: -webkit-flex;
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.pro-info {
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

.pro-name {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 470rpx;
}

.theme {
  color: #fbbf5f;
}

.pro-count {
  margin: 20rpx 0;
  background: #fff;
  padding: 20rpx 30rpx;
}

.pro-num {
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

.pro-num:nth-of-type(1) {
  margin-bottom: 20rpx;
}

.pro-address {
  background: #fff;
  padding: 20rpx 30rpx;
}

.address-txt {
  -webkit-flex: 1;
  flex: 1;
}

.address-area {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 662rpx;
  margin-top: 10rpx;
}

.pro-address icon {
  width: 28rpx;
  height: 28rpx;
  background: url('http://shop.hz-life.com/upload/temp/png/arrow.png') no-repeat;
  background-size: contain;
}

.pro-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  width: 100%;
  border-top: 1rpx solid #ccc;
  z-index: 2;
}

.pro-btn {
  display: block;
  width: 670rpx;
  margin: 15rpx auto;
  height: 80rpx;
  color: #fff;
  background: #fbbf5f;
  text-align: center;
  line-height: 80rpx;
  border-radius: 25rpx;
}

.layer {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 3;
}

.layer-box {
  width: 550rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  font-size: 28rpx;
  background: #fff;
  border-radius: 25rpx;
}

.layer-desc {
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}

.layer-btn {
  display: -webkit-flex;
  display: flex;
  border-top: 1rpx solid #ccc;
  height: 100rpx;
}

.layer-btn text {
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  line-height: 100rpx;
}

.btn-confirm {
  border-left: 1rpx solid #ccc;
  background: #fbbf5f;
  color: #fff;
  border-bottom-right-radius:25rpx;
}

.layer-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #ccc;
  margin: 20rpx 0;
  background: url('http://shop.hz-life.com/Static/img/icon_25.png') no-repeat;
  background-size: contain;
}

.s-layer-btn {
  width: 450rpx;
  height: 80rpx;
  background: #fbbf5f;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 25rpx;
  margin: 20rpx 0;
}
