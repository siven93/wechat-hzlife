page {
  background: #f5f5f5;
}

.cash-header {
  width: 100%;
  height: 500rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_header.png') no-repeat;
  background-size: cover;
  position: relative;
  padding-top: 40rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.cash-header icon {
  display: block;
  width: 271rpx;
  height: 278rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_icon.png') no-repeat;
  background-size: contain;
  margin-left: 220rpx;
}

.header-use {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 50rpx;
}

.header-use view {
  text-align: center;
  letter-spacing: 5rpx;
  font-size: 34rpx;
  color: #fff;
}

.header-use .header-money {
  margin-top: 30rpx;
  color: #f7bf69;
}

.header-money text {
  font-size: 60rpx;
}

.cash-return {
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: center;
  justify-content: center;
  background: #fff;
  margin-top: 20rpx;
  position: relative;
}

.return-item {
  padding: 15rpx 0;
}

.return-item .add-icon {
  width: 37rpx;
  height: 37rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_increase.png') no-repeat;
  background-size: contain;
}

.return-item .minus-icon {
  width: 43rpx;
  height: 38rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_minus.png') no-repeat;
  background-size: contain;
}

.return-item text {
  margin-top: 15rpx;
  font-size: 26rpx;
}

.return-item .return-money {
  color: #999;
  width: 375rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}

.return-line {
  width: 2rpx;
  height: 108rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  background: #cecece;
}

.back-item {
  background: #fff;
  margin-top: 20rpx;
  padding: 15rpx 50rpx;
}

.back-item icon {
  width: 8rpx;
  height: 70rpx;
}

.back-item .back-info {
  background: url('http://shop.hz-life.com/Static/img/partner/cash_info.png') no-repeat;
  background-size: contain;
}

.back-item .back-desc {
  background: url('http://shop.hz-life.com/Static/img/partner/cash_desc.png') no-repeat;
  background-size: contain;
}

.back-item text {
  -webkit-flex: 1;
  flex: 1;
  padding-left: 30rpx;
  font-size: 28rpx;
}

.back-item .arrow {
  width: 21rpx;
  height: 42rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_arrow.png') no-repeat;
  background-size: contain;
}

.cash-content {
  background: #fff;
  margin-top: 20rpx;
  padding: 30rpx 0;
}

.cash-ad {
  width: 688rpx;
  height: 228rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_ad.jpg') no-repeat;
  background-size: contain;
}

.pro-list {
  display: -webkit-flex;
  display: flex;
  margin: 30rpx 0;
  width: 670rpx;
}

.pro-item {
  -webkit-flex: 1;
  flex: 1;
  height: 367rpx;
  padding: 30rpx 0;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  border: 1rpx solid #f5f5f5;
}

.pro-item:nth-of-type(2) {
  border-left: none;
  border-right: none;
}

.pro-item image {
  width: 188rpx;
  height: 188rpx;
  margin-bottom: 30rpx;
}

.pro-item text {
  text-align: center;
  width: 188rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.pro-item .integral {
  margin-top: 20rpx;
  color: #f7bf69;
  font-size: 28rpx;
}

.more {
  width: 201rpx;
  height: 31rpx;
  background: url('http://shop.hz-life.com/Static/img/partner/cash_more.png') no-repeat;
  background-size: contain;
}

/* 弹层 */

.layer {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9;
}

.layer-content {
  width: 600rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.layer-box {
  background: #fff;
  border-radius: 25rpx;
}

.layer-header {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fbbf5f;
  font-size: 28rpx;
  border-bottom: 2rpx solid #fbbf5f;
}

.answer-list {
  padding: 0 30rpx;
  margin: 30rpx 0;
  height: 560rpx;
  overflow-y: auto;
}

.answer-item {
  margin-bottom: 30rpx;
}

.question {
  display: block;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.answer-txt {
  display: -webkit-flex;
  display: flex;
  line-height: 40rpx;
}

.answer-icon {
  font-weight: bold;
  word-break: keep-all;
  white-space: nowrap;
}

.answer-info view {
  text-indent: -20rpx;
  padding-left: 20rpx;
}

.layer-line {
  width: 2rpx;
  height: 120rpx;
  background: #fff;
}

.layer-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  color: #fff;
  -webkit-justify-content: center;
  justify-content: center;
  font-size: 36rpx;
}
